.new-event
	.new-event-slide-area
		height 30px
		left 1%
		position relative
		right 1%

	.form
		inputHeight = 30px
		height calc(100% - inputHeight)
		padding 1em

		.hire-select
			margin-bottom 1em
			position relative

			.input-container
				width 240px

				.input, button
					background white
					height inputHeight
					inline-block()
				.input
					line-height inputHeight
					width 90%
				button
					border none
					outline none
					width 10%

			.hire-options
				background white
				margin 0
				padding 0
				position absolute
				top inputHeight

