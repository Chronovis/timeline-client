ul.rulers
	top 0
	bottom 0
	font-size 0.8em
	list-style none
	margin 0
	padding 0
	position absolute

	& > li
		border-left 1px solid darken(timelineBlue, 6%)
		box-sizing border-box
		color darken(timelineBlue, 30%)
		height 100%
		padding-left 6px
		position absolute
		transition all 0.3s cubic-bezier(.25,.8,.25,1)

		& > span
			position absolute
			bottom 6px
