{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "target": "es6"
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx"
  ],
  "files": [
    "typings/index.d.ts",
    "src/interfaces/interfaces.d.ts",
    "src/actions/events.tsx",
    "src/app.tsx",
    "src/index.tsx",
    "src/reducers/events.tsx",
    "src/reducers/index.tsx",
    "src/routes/history.tsx",
    "src/routes/index.tsx",
    "src/store/index.tsx"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
